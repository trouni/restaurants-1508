<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category, collection: Restaurant::CATEGORIES %>
  <%= f.input :rating %>
  <%= f.input :opening_date %>
  <%= f.submit "Add", class: 'btn btn-primary mt-2' %>
<% end %>
